<Window x:Class="AsyncCancellationToken.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncCancellationToken"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Button Content="下载网页" Margin="10" HorizontalAlignment="Center" DockPanel.Dock="Top" Click="Button_Click"></Button>
        <Button Content="取消下载" Margin="10" HorizontalAlignment="Center" DockPanel.Dock="Top" Click ="ButtonBase_OnClick"></Button>

        <TextBox x:Name="MyTextBox" TextWrapping="Wrap"></TextBox>
    </DockPanel>
</Window>
